@model IEnumerable<WebshopThiso.Models.CartItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Shopping cart</h1>

@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayNameFor(model => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Product.SerialNumber)
                </td>

                <td>

                    @Html.ActionLink("Details", "Detail", "product", new { item.Product.SerialNumber }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
        </tbody>
    </table>
}

